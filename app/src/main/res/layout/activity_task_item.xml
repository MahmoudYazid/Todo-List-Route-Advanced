<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.Task_Item">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/item_task_shape"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"

        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        
        <LinearLayout
            android:id="@+id/DecorationColumn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/TextBlue"

            android:layout_marginVertical="20dp"
            android:layout_marginLeft="17dp"
            android:orientation="horizontal" />

        <LinearLayout
            app:layout_constraintLeft_toRightOf="@+id/DecorationColumn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/DoneBtm"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:orientation="vertical"

            android:layout_marginVertical="20dp"
            android:layout_marginLeft="17dp"
            >
            <TextView
                android:text="Task1"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:textColor="@color/TextBlue"
                android:layout_height="wrap_content"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/Clockimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_access_time_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    android:text="Textsssssssssssssssss2"
    android:gravity="center_vertical"
    android:layout_marginLeft="5dp"
    app:layout_constraintLeft_toRightOf="@+id/Clockimg"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/DoneBtm"
            android:background="@drawable/btm_task_item_shape"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="69dp"
            android:textColor="@color/whiteColor"
            android:gravity="center"
            android:src="@drawable/baseline_check_24"


            android:layout_marginRight="20dp"
            android:layout_marginVertical="20dp"
            android:tint="@color/whiteColor"
            android:layout_height="40dp">


        </androidx.appcompat.widget.AppCompatImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>